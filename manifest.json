{
  "manifest_version": 2,

  "name": "Bug Bounty Buddy",
  "description": "Tool for assisting with web recon.",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "https://www.devdungeon.com/*",
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "contextMenus"
  ],

  "omnibox": { "keyword" : "bbb" },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"]
  }


}
